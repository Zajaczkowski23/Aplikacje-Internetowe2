{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.temperature }}</td>
            </tr>
            <tr>
                <th>Feels_like</th>
                <td>{{ weather.feelsLike }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ weather.wind }}</td>
            </tr>
            <tr>
                <th>Rain</th>
                <td>{{ weather.rain }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': weather.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
